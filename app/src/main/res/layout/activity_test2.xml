<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ygst.cenggeche.ui.view.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        flowlayout:horizontal_spacing="10dp"
        flowlayout:vertical_spacing="10dp" />


    <com.ygst.cenggeche.ui.view.RoundImageView
        android:id="@+id/civ_1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/flow_layout"
        android:src="@drawable/loli"/>

    <com.ygst.cenggeche.ui.view.RoundImageView
        android:id="@+id/civ_2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/flow_layout"
        android:src="@drawable/loli"/>

    <com.ygst.cenggeche.ui.widget.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Tsien"
        android:textColor="@color/colorTheme"
        android:textSize="50sp" />

    <Button
        android:id="@+id/shandong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shimmer_tv"
        android:layout_gravity="bottom"
        android:text="闪动" />
    
    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/shandong" />

</RelativeLayout>
