<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/icon_login_bg">

    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="65dp"
            android:src="@mipmap/logo_cenggeche" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/edit_bg"
                android:drawableLeft="@mipmap/icon_phone"
                android:drawablePadding="10dp"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/colorEditTextFont"
                android:textColorHint="@color/colorEditTextFont"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignBottom="@+id/bt_getCode"
                android:layout_alignTop="@+id/bt_getCode"
                android:layout_toLeftOf="@+id/bt_getCode"
                android:drawablePadding="10dp"
                android:background="@drawable/edit_bg_code"
                android:digits="1234567890"
                android:drawableLeft="@mipmap/icon_code"
                android:hint="请输入验证码"
                android:inputType="numberDecimal"
                android:textColor="@color/colorEditTextFont"
                android:textColorHint="@color/colorEditTextFont"
                android:textSize="13sp" />

            <Button
                android:id="@+id/bt_getCode"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_selector_code"
                android:text="立即获取"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/bt_pwd_login"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_bg_pwd_code"
                android:text="账号密码登录"
                android:textColor="@color/colorTheme"
                android:textSize="13sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_selector"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tiaokuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="还没账号？请先注册！"
                android:textColor="@color/colorTheme"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>